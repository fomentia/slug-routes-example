<h2>Show Comment</h2>

<ul>

  <li>
    <strong>Body:</strong>
    <%= @comment.body %>
  </li>

  <li>
    <strong>Author name:</strong>
    <%= @comment.author_name %>
  </li>

  <li>
    <strong>Title:</strong>
    <%= @comment.title %>
  </li>

</ul>

<span><%= link "Edit", to: admin_post_comment_path(@conn, :edit, @comment.post_id, @comment) %></span>
<span><%= link "Back", to: admin_post_comment_path(@conn, :index, @comment.post_id) %></span>
